include ../checkbox/checkbox.pug
include ../date/date.pug
include ../submit/submit.pug
include ../range/range.pug
include ../switch/switch.pug
include ../radio/radio.pug

mixin form(args)
  case args.name
    when "index"
      .form.form_solo
        .form__title
          span.form__title-line(data-index='0') Найдём номера под
          br
          span.form__title-line(data-index='1') ваши пожелания
        form.form__inputs.form__inputs_indent_up(method='GET' action='/filter/')
          .form__field.form__field_short(data-index="0")
            +date({
              text: "Прибытие",
              input: {
                name: "comein",
                placeholder: "ДД.ММ.ГГГГ"
              }
            })
          .form__field.form__field_short.form__field_indent_left(data-index="1")
            +date({
              text: "Выезд",
              input: {
                name: "comeout",
                placeholder: "ДД.ММ.ГГГГ"
              }
            })
          .form__field.form__field_long.form__field_indent_up(data-index="2")
            .form__label.form__label_for_dropdown Гости
          .form__field.form__field_long.form__field_indent_longup
            +submit({
              text: "Подобрать номер",
              input: {
                  placeholder: "ДД.ММ.ГГГГ"
              }
            })
      - break
    when "filter"
      .form
        form.form__inputs(method='GET' action='fake-script')
          .form__field.form__field_medium(data-index="0")
            +date({
              text: "Даты пребывания в отеле",
              input: {
                name: "comeinout"
              }
            })
          .form__field.form__field_medium.form__field_indent_up(data-index="1")
            .form__label.form__label_for_dropdown Гости
          .form__field.form__field_medium.form__field_indent_longup
            +range({
              text: "Диапазон цены",
              from: "5 000",
              to: "10 000",
              note: "Стоимость за сутки пребывания в номере",
              input: {
                name: "price-range"
              }
            })
          .form__field.form__field_indent_longup
            .form__checkbox
              +checkbox({
                text: "Checkbox buttons",
                input: [{
                  name: "smoke",
                  value: 0,
                  title: "Можно курить"
                }, {
                  name: "pets",
                  value: 1,
                  title: "Можно с питомцами"
                }, {
                  name: "guests",
                  value: 2,
                  title: "Можно пригласить гостей<br>(до 10 человек)"
                }]
              })
          .form__field.form__field_indent_longup
            +checkbox({
              text: "Доступность",
              input: [{
                name: "wide",
                value: 3,
                title: "Широкий коридор",
                note: "Ширина коридоров в номере<br>не менее 91 см."
              }, {
                name: "helper",
                value: 4,
                title: "Помощник для инвалидов",
                note: "На 1 этаже вас встретит специалист<br>и проводит до номера."
              }]
            })
          .form__field.form__field_medium.form__field_indent_longup(data-index="5")
            .form__label.form__label_for_dropdown Удобства номера
          .form__field.form__field_medium.form__field_indent_longup
            +checkbox({
              text: "Дополнительные удобства",
              expandable: true,
              input: [{
                name: "breakfast",
                value: 5,
                title: "Завтрак"
              }, {
                name: "desk",
                value: 6,
                title: "Письменный стол"
              }, {
                name: "feeding",
                value: 7,
                title: "Стул для кормления"
              }, {
                name: "cradle",
                value: 8,
                title: "Кроватка"
              }, {
                name: "tv",
                value: 9,
                title: "Телевизор"
              }, {
                name: "shampoo",
                value: 10,
                title: "Шампунь"
              }, {
                name: "tv",
                value: 11,
                title: "Телевизор"
              }, {
                name: "shampoo",
                value: 12,
                title: "Шампунь"
              }]
            })
      - break
    when "room"
      .form.form_solo
        .form__head
          .form__title
            span.form__n &numero;
            span.form__number 888
            span.form__special Люкс
          .form__head-price
            .form__head-price-value 9 990&#x20bd;
            | в сутки
        form.form__inputs(method='GET' action='filter/')
          .form__field.form__field_short(data-index="0")
            +date({
              text: "Прибытие",
              input: {
                name: "comein",
                placeholder: "ДД.ММ.ГГГГ"
              }
            })
          .form__field.form__field_short.form__field_indent_left(data-index="1")
            +date({
              text: "Выезд",
              input: {
                name: "comeout",
                placeholder: "ДД.ММ.ГГГГ"
              }
            })
          .form__field.form__field_long.form__field_indent_up
            .form__label.form__label_for_dropdown Гости
          .form__field.form__field_long.form__field_indent_up
            .form__field-option
              .form__nametag 9 990&#x20bd; х 4 суток
              | 39 960&#x20bd;
            .form__field-option
              .form__nametag.form__nametag_has_hint Сбор за услуги: скидка 2 179&#x20bd;
              | 0&#x20bd;
            .form__field-option
              .form__nametag.form__nametag_has_hint Сбор за дополнительные услуги
              | 300&#x20bd;
            .form__field-total
              .form__nametag Итого
              .form__total-price 38 081&#x20bd;
          .form__field.form__field_long.form__field_indent_up
            +submit({
              text: "Забронировать",
              input: {
                  placeholder: "ДД.ММ.ГГГГ"
              }
            })
      - break
    when "signin"
      include ../button/button.pug
      .form.form_solo
        .form__title Войти
        form.form__inputs(method='POST' action='/fake-script/')
          .form__field.form__field_long
            input.form__input.form__input_text(placeholder='Email' type='text' name='email')
            input.form__input.form__input_text.form__input_indent_tinyup(placeholder='Пароль' type='password' name='password')
          .form__field.form__field_long.form__field_indent_up
            +submit({
              text: "Войти"
            })
          .form__field.form__field_type_question
            .form__field-text Нет аккаунта на Toxin?
            +button({
              settings: {
                href: "/signup/"
              },
              text: "Создать"
            })
      - break
    when "signup"
      include ../button/button.pug
      .form.form_solo
        .form__title Регистрация аккаунта
        form.form__inputs(method='POST' action='/fake-script/')
          .form__field.form__field_long
            input.form__input.form__input_text(placeholder='Имя' type='text' name='firstname')
            input.form__input.form__input_text.form__input_indent_tinyup(placeholder='Фамилия' type='text' name='lastname')
          .form__field.form__field_indent_tinyup
            +radio({
              input: [{
                settings: {
                  value: "male",
                  checked: ""
                },
                text: "Мужчина"
              }, {
                settings: {
                  value: "female"
                },
                text: "Женщина"
              }]
            })
          .form__field.form__field_long.form__field_indent_custom(data-index="2")
            +date({
              noArrow: true,
              input: {
                name: "birthdate",
                placeholder: "ДД.ММ.ГГГГ"
              },
              text: "Дата рождения"
            })
          .form__field.form__field_long.form__field_indent_up
            .form__label Данные для входа в сервис
            input.form__input.form__input_text(placeholder='Email' type='text' name='email')
            input.form__input.form__input_text.form__input_indent_tinyup(placeholder='Пароль' type='password' name='password')
          .form__field.form__field_indent_tinyup.form__field_long
            +switch({
              input: [{
                name: "offer",
                text: "Получать спецпредложения"
              }]
            })
          .form__field.form__field_long.form__field_indent_up
            +submit({
              text: "Перейти к оплате"
            })
          .form__field.form__field_type_question
            .form__field-text Уже есть аккаунт на Toxin
            +button({
              settings: {
                href: "/signin/"
              },
              text: "Войти"
            })
      - break
mixin page(args)
  include ./__header/page__header.pug
  include ../form/form.pug

  doctype html
  head
    title #{args.title}
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='icon' type='image/x-icon' href='/favicon.ico')
    link(rel='mask-icon' href='/img/icons/logo_icon.svg' color='#BC9CFF')

  case args.name
    when "index"

      +header(false, true, true)

      .page__wrap.content.content_form.page__content
        .content__cover
        .page__wrap-inner
          +form({name: "index"})
          .content__slogan
            | Лучшие номера для вашей работы, отдыха и просто вдохновения

      -break
    when "filter"

      include ../pagination/pagination.pug
      include ../room-card/room-card.pug

      +header(true, true, true)

      .content.page__wrap.page_content
        .content__cover
        .page__wrap-inner
          .content__settings
            +form({name: "filter"})
          .content__items
            .content__title Номера, которые мы для вас подобрали
            .content__rooms
              +room-card({
                number: 888,
                settings: {
                  "data-index": "0"
                },
                images: 3,
                special: true,
                price: "9 990",
                stars: 5,
                feedbacks: 145
              })
              +room-card({
                number: 840,
                settings: {
                  "data-index": "1"
                },
                images: 1,
                special: false,
                price: "9 990",
                stars: 4,
                feedbacks: 65
              })
              +room-card({
                number: 980,
                settings: {
                  "data-index": "2"
                },
                images: 1,
                special: true,
                price: "8 500",
                stars: 3,
                feedbacks: 35
              })
              +room-card({
                number: 856,
                settings: {
                  "data-index": "3"
                },
                images: 1,
                special: false,
                price: "7 300",
                stars: 5,
                feedbacks: 19
              })
              +room-card({
                number: 740,
                settings: {
                  "data-index": "4"
                },
                images: 1,
                special: false,
                price: "6 000",
                stars: 4,
                feedbacks: 44
              })
              +room-card({
                number: 982,
                settings: {
                  "data-index": "5"
                },
                images: 1,
                special: false,
                price: "5 800",
                stars: 3,
                feedbacks: 56
              })
              +room-card({
                number: 678,
                settings: {
                  "data-index": "6"
                },
                images: 1,
                special: false,
                price: "5 500",
                stars: 5,
                feedbacks: 45
              })
              +room-card({
                number: 450,
                settings: {
                  "data-index": "7"
                },
                images: 1,
                special: false,
                price: "5 300",
                stars: 4,
                feedbacks: 39
              })
              +room-card({
                number: 350,
                settings: {
                  "data-index": "8"
                },
                images: 1,
                special: false,
                price: "5 000",
                stars: 3,
                feedbacks: 77
              })
              +room-card({
                number: 666,
                settings: {
                  "data-index": "9"
                },
                images: 1,
                special: false,
                price: "5 000",
                stars: 5,
                feedbacks: 25
              })
              +room-card({
                number: 444,
                settings: {
                  "data-index": "10"
                },
                images: 1,
                special: false,
                price: "5 000",
                stars: 3,
                feedbacks: 15
              })
              +room-card({
                number: 352,
                settings: {
                  "data-index": "11"
                },
                images: 1,
                special: false,
                price: "5 000",
                stars: 3,
                feedbacks: 55
              })
            +pagination

      -break
    when "room"

      include ../tag/tag.pug
      include ../review/review.pug
      include ../bullet-list/bullet-list.pug
      include ../statistic/statistic.pug

      +header(true, true, true)

      .content.page__wrap
        .content__cover
        .content__images
          div(data-index='0')
            img(src='/assets/img/rooms/888-0.jpg')
          div(data-index='1')
            div(data-index='2')
              img(src='/assets/img/rooms/888-1.jpg')
            div(data-index='2')
              img(src='/assets/img/rooms/888-2.jpg')
        .page__wrap-inner
          .content__info
            div
              .content__label Сведения о номере
              +tag({
                image: "insert_emoticon",
                label: "Комфорт",
                text: "Шумопоглощающие стены"
              })
              +tag({
                image: "location_city",
                label: "Удобство",
                text: "Окно в каждой из спален"
              })
              +tag({
                image: "whatshot",
                label: "Уют",
                text: "Номер оснащён камином"
              })
            .content__total
              .content__label Впечатления от номера
              +statistic({
                class: "content__statistic",
                total: [260, "голосов"],
                legend: ["Великолепно", "Хорошо", "Удовлетворительно", "Разочарован"]
              })
            .reviews.content__reviews
              .content__label Отзывы посетителей номера
              .reviews__number 2 отзыва
              +review({
                profile: {
                  avatar: "Murad_Sarafanov",
                  name: "Мурад Сарафанов",
                  online: "5 дней назад"
                },
                likes: {
                  liked: "true",
                  total: 12
                },
                text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
              })
              +review({
                profile: {
                  avatar: "Patrisiya_Styoklyshkova",
                  name: "Патрисия Стёклышкова",
                  online: "Неделю назад"
                },
                likes: {
                  liked: "false",
                  total: 2
                },
                text: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"
              })
            .rules.content__rules
              .content__label Правила
              +bullet-list(["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"])
            .repeal.content__repeal
              .content__label Отмена
              .content__text
                | Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
          +form({name: "room", class: "content__booking"})

      -break
    when "signin"

      +header(true, false, true)

      .page__wrap.content.content_form
        .content__cover
        .page__wrap-inner
          +form({name: "signin"})

      -break
    when "signup"

      +header(true, true, false)

      .page__wrap.content.content_form
        .content__cover
        .page__wrap-inner
          +form({name: "signup"})

      -break

  include ./__footer/page__footer.pug
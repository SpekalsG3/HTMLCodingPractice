              .content__image.content__image_right_quater
                img.content__image-inner(src='/img/rooms/888-1.jpg')
              .content__image.content__image_right_quater
                img.content__image-inner(src='/img/rooms/888-2.jpg')
          .content__inner
            .content__info
              .content__info-inner

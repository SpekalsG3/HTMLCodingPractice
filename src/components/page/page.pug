include ../arrow/arrow.pug
include ../logo/logo.pug
include ../header/header.pug
include ../subscription/subscription.pug
include ../form/form.pug

mixin page(args)

  doctype html
  head
    meta(charset='utf-8')
    title #{args.title}
    meta(name="description")&attributes({content: args.title})
    meta(name="keywords" content="WebPack,HTML,PUG,CSS,SCSS,JavaScript,ES6")
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='mask-icon' href='/assets/img/icons/logo-icon.svg' color='#BC9CFF')

  body.page
    case args.name
      when "index"

        +header({index: false, signin: true, signup: true})

        .content.content_form
          .content__inner
            .content__form
              +form({name: "index"})
            .content__slogan
              | Лучшие номера для вашей работы, отдыха и просто вдохновения

        -break
      when "filter"

        +header({index: true, signin: true, signup: true})

        .content
          .content__inner
            .content__settings
              +form({name: "filter"})
            .content__items
              .content__title Номера, которые мы для вас подобрали
              .content__rooms
                .content__room
                  +room-card({
                    number: 888,
                    settings: {
                      "data-index": "0"
                    },
                    images: 3,
                    special: true,
                    price: "9 990",
                    stars: 5,
                    feedbacks: 145
                  })
                .content__room
                  +room-card({
                    number: 840,
                    settings: {
                      "data-index": "1"
                    },
                    images: 1,
                    special: false,
                    price: "9 990",
                    stars: 4,
                    feedbacks: 65
                  })
                .content__room
                  +room-card({
                    number: 980,

include ../includes/ui.kit.pug

doctype html
head
	title Авторизация - Toxin
	meta(charset='utf-8')
	meta(name='viewport' content='width=device-width, initial-scale=1')
	link(rel='icon' type='image/x-icon' href='/favicon.ico')
	link(rel='mask-icon' href='/assets/img/icons/logo_icon.svg' color='#BC9CFF')

include ../includes/header.pug
+header(true, false, true)

.content.kit-one-main.wrap-container
	.content-cover
	.wrap
		.main-block.kit-form-block
			.kit-form-title Войти
			form.kit-form(method='POST', action='/fake-script/change-me', data-space='up')
				.kit-form-field(data-index='0', data-size='long')
					input.kit-form-input(placeholder='Email', type='text', name='email')
					input.kit-form-input.main-second-field(placeholder='Пароль', type='password', name='password')
				.kit-form-field.form-submit-input(data-size='long', data-space='up')
					.forward.kit-arrow
					button.kit-form-submit Войти
				.kit-form-field.main-question
					span Нет аккаунта на Toxin?Toxin?
					a(href='/signup/')
						div Создать

include ../includes/footer.pug
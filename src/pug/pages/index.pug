include ../includes/ui.kit.pug

doctype html
head
	title Найдите номер - Toxin
	meta(charset='utf-8')
	meta(name='viewport' content='width=device-width, initial-scale=1')
	link(rel='icon' type='image/x-icon' href='/favicon.ico')
	link(rel='mask-icon' href='/assets/img/icons/logo_icon.svg' color='#BC9CFF')

include ../includes/header.pug
+header(false, true, true)

.kit-one-main.wrap-container.content
	.content-cover
	.wrap
		.main-block.kit-form-block
			.kit-form-title
				span.main-line(data-index='0') Найдём номера под
				br
				span.main-line(data-index='1') ваши пожелания
			form.kit-form(method='GET' action='filter/' data-space='up')
				+kit-form-field({
					text: "Прибытие",
					settings: {
						"data-index": "0",
						"data-size": "short"
					},
					input: {
						name: "comein",
						placeholder: "ДД.ММ.ГГГГ"
					}
				})
				+kit-form-field({
					text: "Выезд",
					settings: {
						"data-index": "1",
						"data-size": "short",
						"data-space": "left"
					},
					input: {
						name: "comeout",
						placeholder: "ДД.ММ.ГГГГ"
					}
				})
				+kit-form-field({
					purpose: "dropdown",
					text: "Гости",
					settings: {
						"data-index": "2",
						"data-size": "long",
						"data-space": "up"
					}
				})
				+kit-form-field({
						purpose: "submit",
						text: "Подобрать номер",
						settings: {
								class: "form-submit-input",
								"data-size": "long"
						},
						input: {
								placeholder: "ДД.ММ.ГГГГ"
						}
				})
		.main-slogan
				| Лучшие номера для вашей работы, отдыха и просто вдохновения

include ../includes/footer.pug
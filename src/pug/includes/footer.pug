        a(href="fake-link").footer__link О нас
        a(href="fake-link").footer__link Новости
        a(href="fake-link").footer__link Служба поддержки
        a(href="fake-link").footer__link Услуги
      .footer__info
        .footer__title О нас
        a(href="fake-link").footer__link О сервисе
        a(href="fake-link").footer__link Наша команда
        a(href="fake-link").footer__link Вакансии
        a(href="fake-link").footer__link Инвесторы
      .footer__info
        .footer__title Служба поддержки
        a(href="fake-link").footer__link Соглашения
        a(href="fake-link").footer__link Сообщества
        a(href="fake-link").footer__link Связь с нами
